<style>
	/* Header Styles */
	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border);
		z-index: 1000;
		padding: 1.5rem 0;
	}

	.header-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		font-size: 1.1rem;
		font-weight: 500;
		letter-spacing: 0.5px;
		color: var(--color-text);
	}

	.main-nav {
		display: flex;
		gap: 2.5rem;
	}

	.main-nav a {
		font-size: 0.95rem;
		color: var(--color-text);
		position: relative;
	}

	.main-nav a:hover {
		opacity: 1;
	}

	.main-nav a::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 1px;
		background: var(--color-text);
		transition: width 0.3s ease;
	}

	.main-nav a:hover::after {
		width: 100%;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border-radius: 50%;
		transition: background 0.2s ease;
	}

	.social-links a:hover {
		background: var(--color-bg-alt);
		opacity: 1;
	}

	/* Hero Section */
	.hero-section {
		min-height: 100vh;
		display: flex;
		align-items: center;
		padding-top: 80px;
	}

	.hero-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		width: 100%;
	}

	.hero-image {
		position: relative;
		aspect-ratio: 3/4;
		overflow: hidden;
		max-width: 400px;
		margin: 0 auto;
	}

	.placeholder-image {
		width: 100%;
		height: 100%;
		background: var(--color-bg-alt);
		display: flex;
		align-items: center;
		justify-content: center;
		border: 2px dashed var(--color-border);
	}

	.placeholder-image p {
		color: var(--color-text-light);
		font-size: 0.9rem;
	}

	.hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.hero-content {
		padding: 2rem 0;
	}

	.hero-title {
		font-size: clamp(3rem, 8vw, 6rem);
		font-weight: 300;
		letter-spacing: -0.02em;
		line-height: 1;
		margin-bottom: 2rem;
		color: var(--color-text);
	}

	.hero-tagline {
		font-size: clamp(1.1rem, 2vw, 1.5rem);
		color: var(--color-text-light);
		font-weight: 300;
		line-height: 1.6;
		max-width: 500px;
	}

	/* Footer */
	.site-footer {
		background: var(--color-bg-alt);
		padding: 2rem;
		text-align: center;
		border-top: 1px solid var(--color-border);
	}

	.site-footer p {
		font-size: 0.875rem;
		color: var(--color-text-light);
	}

	/* Responsive Design */
	@media (max-width: 968px) {
		.hero-container {
			grid-template-columns: 1fr;
			gap: 3rem;
			padding: 3rem 2rem;
		}

		.hero-image {
			max-width: 500px;
			margin: 0 auto;
		}

		.hero-content {
			text-align: center;
		}

		.hero-tagline {
			margin: 0 auto;
		}
	}

	@media (max-width: 768px) {
		.header-container {
			padding: 0 1.5rem;
		}

		.main-nav {
			gap: 1.5rem;
		}

		.main-nav a {
			font-size: 0.875rem;
		}

		.logo {
			font-size: 1rem;
		}

		.hero-container {
			padding: 2rem 1.5rem;
		}

		.hero-title {
			font-size: 2.5rem;
		}
	}

	@media (max-width: 480px) {
		.main-nav {
			display: none;
		}

		.social-links {
			display: none;
		}

		.logo {
			margin: 0 auto;
		}
	}
</style>
