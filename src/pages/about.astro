---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About | Trevor Jerideau" description="Learn more about Trevor Jerideau">
	<header class="site-header">
		<div class="header-container">
			<a href="/" class="logo">TREVOR JERIDEAU</a>
			<nav class="main-nav">
				<a href="/">Home</a>
				<a href="/about">About</a>
				<a href="/work">Work</a>
				<a href="/contact">Contact</a>
			</nav>
		</div>
	</header>

	<main class="page-content">
		<div class="content-container">
			<h1 class="page-title">About</h1>
			
			<div class="about-content">
				<section class="bio-section">
					<h2>Background</h2>
					<p>
						Welcome to my personal website. This space showcases my work, experience, and interests.
					</p>
					<p>
						More information about my background, experience, and professional journey will be added here.
					</p>
				</section>

				<section class="bio-section">
					<h2>Expertise</h2>
					<p>
						Details about skills, specializations, and areas of expertise.
					</p>
				</section>

				<section class="bio-section">
					<h2>Interests</h2>
					<p>
						Information about professional interests, projects, and ongoing work.
					</p>
				</section>
			</div>
		</div>
	</main>

	<footer class="site-footer">
		<p>&copy; {new Date().getFullYear()} by Trevor Jerideau</p>
	</footer>
</Layout>

<style>
	/* Header Styles */
	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border);
		z-index: 1000;
		padding: 1.5rem 0;
	}

	.header-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		font-size: 1.1rem;
		font-weight: 500;
		letter-spacing: 0.5px;
		color: var(--color-text);
	}

	.main-nav {
		display: flex;
		gap: 2.5rem;
	}

	.main-nav a {
		font-size: 0.95rem;
		color: var(--color-text);
		position: relative;
	}

	.main-nav a:hover {
		opacity: 1;
	}

	.main-nav a::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 1px;
		background: var(--color-text);
		transition: width 0.3s ease;
	}

	.main-nav a:hover::after {
		width: 100%;
	}

	/* Page Content */
	.page-content {
		min-height: 100vh;
		padding-top: 120px;
		padding-bottom: 4rem;
	}

	.content-container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.page-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 300;
		margin-bottom: 3rem;
		color: var(--color-text);
		letter-spacing: -0.02em;
	}

	.about-content {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.bio-section h2 {
		font-size: 1.5rem;
		font-weight: 400;
		margin-bottom: 1rem;
		color: var(--color-text);
		border-bottom: 1px solid var(--color-border);
		padding-bottom: 0.5rem;
	}

	.bio-section p {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text-light);
		margin-bottom: 1rem;
	}

	/* Footer */
	.site-footer {
		background: var(--color-bg-alt);
		padding: 2rem;
		text-align: center;
		border-top: 1px solid var(--color-border);
	}

	.site-footer p {
		font-size: 0.875rem;
		color: var(--color-text-light);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.header-container {
			padding: 0 1.5rem;
		}

		.content-container {
			padding: 0 1.5rem;
		}

		.main-nav {
			gap: 1.5rem;
		}

		.main-nav a {
			font-size: 0.875rem;
		}

		.page-content {
			padding-top: 100px;
		}
	}

	@media (max-width: 480px) {
		.main-nav {
			display: none;
		}

		.logo {
			margin: 0 auto;
		}
	}
</style>
