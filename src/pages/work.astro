---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Work | Trevor Jerideau" description="Portfolio and featured work by Trevor Jerideau">
	<header class="site-header">
		<div class="header-container">
			<a href="/" class="logo">TREVOR JERIDEAU</a>
			<nav class="main-nav">
				<a href="/">Home</a>
				<a href="/about">About</a>
				<a href="/work">Work</a>
				<a href="/contact">Contact</a>
			</nav>
		</div>
	</header>

	<main class="page-content">
		<div class="content-container">
			<h1 class="page-title">Featured Work</h1>
			
			<div class="work-grid">
				<!-- Work Item 1 -->
				<article class="work-item">
					<div class="work-image-placeholder">
						<p>Project Image</p>
					</div>
					<div class="work-info">
						<h2>Project Title</h2>
						<p class="work-description">Brief description of the project or work.</p>
						<a href="#" class="work-link">View Project →</a>
					</div>
				</article>

				<!-- Work Item 2 -->
				<article class="work-item">
					<div class="work-image-placeholder">
						<p>Project Image</p>
					</div>
					<div class="work-info">
						<h2>Project Title</h2>
						<p class="work-description">Brief description of the project or work.</p>
						<a href="#" class="work-link">View Project →</a>
					</div>
				</article>

				<!-- Work Item 3 -->
				<article class="work-item">
					<div class="work-image-placeholder">
						<p>Project Image</p>
					</div>
					<div class="work-info">
						<h2>Project Title</h2>
						<p class="work-description">Brief description of the project or work.</p>
						<a href="#" class="work-link">View Project →</a>
					</div>
				</article>
			</div>
		</div>
	</main>

	<footer class="site-footer">
		<p>&copy; {new Date().getFullYear()} by Trevor Jerideau</p>
	</footer>
</Layout>

<style>
	/* Header Styles */
	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border);
		z-index: 1000;
		padding: 1.5rem 0;
	}

	.header-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		font-size: 1.1rem;
		font-weight: 500;
		letter-spacing: 0.5px;
		color: var(--color-text);
	}

	.main-nav {
		display: flex;
		gap: 2.5rem;
	}

	.main-nav a {
		font-size: 0.95rem;
		color: var(--color-text);
		position: relative;
	}

	.main-nav a:hover {
		opacity: 1;
	}

	.main-nav a::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 1px;
		background: var(--color-text);
		transition: width 0.3s ease;
	}

	.main-nav a:hover::after {
		width: 100%;
	}

	/* Page Content */
	.page-content {
		min-height: 100vh;
		padding-top: 120px;
		padding-bottom: 4rem;
	}

	.content-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.page-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 300;
		margin-bottom: 3rem;
		color: var(--color-text);
		letter-spacing: -0.02em;
	}

	/* Work Grid */
	.work-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 3rem;
	}

	.work-item {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.work-image-placeholder {
		aspect-ratio: 16/10;
		background: var(--color-bg-alt);
		border: 2px dashed var(--color-border);
		display: flex;
		align-items: center;
		justify-content: center;
		transition: border-color 0.3s ease;
	}

	.work-item:hover .work-image-placeholder {
		border-color: var(--color-text-light);
	}

	.work-image-placeholder p {
		color: var(--color-text-light);
		font-size: 0.9rem;
	}

	.work-info h2 {
		font-size: 1.5rem;
		font-weight: 400;
		margin-bottom: 0.5rem;
		color: var(--color-text);
	}

	.work-description {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--color-text-light);
		margin-bottom: 1rem;
	}

	.work-link {
		display: inline-flex;
		align-items: center;
		font-size: 0.95rem;
		color: var(--color-text);
		font-weight: 500;
		transition: transform 0.2s ease;
	}

	.work-link:hover {
		transform: translateX(4px);
	}

	/* Footer */
	.site-footer {
		background: var(--color-bg-alt);
		padding: 2rem;
		text-align: center;
		border-top: 1px solid var(--color-border);
	}

	.site-footer p {
		font-size: 0.875rem;
		color: var(--color-text-light);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.header-container {
			padding: 0 1.5rem;
		}

		.content-container {
			padding: 0 1.5rem;
		}

		.main-nav {
			gap: 1.5rem;
		}

		.main-nav a {
			font-size: 0.875rem;
		}

		.page-content {
			padding-top: 100px;
		}

		.work-grid {
			grid-template-columns: 1fr;
			gap: 2.5rem;
		}
	}

	@media (max-width: 480px) {
		.main-nav {
			display: none;
		}

		.logo {
			margin: 0 auto;
		}
	}
</style>
